root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.postcss]
# PostCSS files should be treated as CSS with additional syntax
indent_size = 2
tab_width = 2

[*.{css,postcss}]
# CSS and PostCSS specific settings
indent_size = 2
tab_width = 2